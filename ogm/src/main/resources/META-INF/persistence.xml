<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">



	<persistence-unit name="ogm-jpa-tutorial"
		transaction-type="JTA">
		<!-- Use the Hibernate OGM provider: configuration will be transparent -->
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>

		<properties>
			<!-- Here you will pick which NoSQL technology to use, and configure it; 
				in this example we start a local in-memory Infinispan node. -->

			<property name="hibernate.ogm.datastore.provider"
				value="mongodb" />
			<property name="hibernate.ogm.datastore.grid_dialect"
				value="org.hibernate.ogm.datastore.mongodb.MongoDBDialect" />
			<property name="hibernate.ogm.datastore.database"
				value="app" />
			<property name="hibernate.ogm.datastore.host"
				value="cluster0.u7kax.mongodb.net" />
			<property name="hibernate.ogm.datastore.port" value="27017" />
			<property name="hibernate.ogm.datastore.username"
				value="douglas" />
			<property name="hibernate.ogm.datastore.password"
				value="UmaSuperSenha" />


		</properties>
	</persistence-unit>

</persistence>

